    <link 
      href="https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@200;300;400;500;600;700;800;900&family=Roboto:wght@100;200;300;400;500;600;700;800;900&display=swap" 
      rel="stylesheet"
    />  
    <style>
      body {
        background-color: #8EC5FC;
        background-image: linear-gradient(62deg, #8EC5FC 0%, #E0C3FC 100%);
      }

      .header {
        font-family: "Source Sans",;
        font-weight: 700;
        font-size: 1.5em;
      }

      .table-category {
        font-family: "Source Sans",;
        font-weight: 700
      }

      .table-value {
        font-family: "Roboto"
      }

      #category-row {
        padding: 10px;
      }

      .body-text {
        font-family: "Roboto"
      }

      #title {
        text-align: center;
      }

      .form-container {
        margin-top: 20px;
      }

      #watchlist {
        margin-top: 20px;
        border: 2px solid;
        border-radius: 16px;
      }

      #watchlist-nav-header {
        color: white;
      }

      #homepage-link {
        color: white;
        font-weight: 400;
        font-size: 1.00em;
      }

      .dropdown-container {
        margin-top: 5px;
      }

    </style>
  </head>
  <body>
    <nav class="navbar bg-dark">
      <div class="container justify-content-center">
        <a class="navbar-brand header" id="watchlist-nav-header">Film Watchlist</a>
        <a id="homepage-link" href="/">Homepage</a>
    </nav>



    <div class="container text-center" id="watchlist">
      <div class="row align-items-center" id="category-row">
        <div class="col table-category">
          TITLE
        </div>
        <div class="col table-category">
          DIRECTOR
        </div>
        <div class="col table-category">
          YEAR
        </div>
        <div class="col table-category">
          RUNTIME
        </div>
        <div class="col table-category">
          WATCHED
        </div>
        <div class="col table-category">
          WHERE TO VIEW
        </div>
      </div>
      <hr>
      <% movies.forEach(function(movie){ %>
        <div class="row align-items-center">
          <div class="col table-value">
            <%= movie.title %>
          </div>
          <div class="col table-value">
            <%= movie.director %>
          </div>
          <div class="col table-value">
            <%= movie.year %>
          </div>
          <div class="col table-value">
            <%= movie.runTime %>
          </div>
          <div class="col table-value">
            <%= movie.watched %>
          </div>
          <div class="col table-value">
            <%= movie.streaming.join(", ") %>
          </div>
        </div>
        <div class="row justify-content-end dropdown-container">
          <div class="col-2">
            <div class="dropdown">
              <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Update Film
              </button>
              <ul class="dropdown-menu">
                <li>
                  <!-- <a class="dropdown-item" href="#">Mark as watched</a> -->
                  <form action="/movies" method="PUT">
                    <button type="submit" class="btn">Mark as watched</button>
                  </form>
                </li>
                <li>
                  <!-- <a class="dropdown-item" href="#">Remove from watchlist</a> -->
                  <form action="/movies" method="PUT">
                    <button type="submit" class="btn">Remove from watchlist</button>
                  </form>
                </li>
                <li>
                  <!-- <a class="dropdown-item" href="#">Update streaming platforms</a> -->
                  <form action="/movies" method="PUT">
                    <button type="submit" class="btn">Update streaming platforms</button>
                  </form>
                </li>
              </ul>
            </div>
          </div>
        </div>
        
        
       
        <hr>
      <% }); %>
    </div>


    

    


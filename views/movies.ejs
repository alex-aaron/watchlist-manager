      }

      .movies-container {
        margin-top: 20px;
      }

      #movie-row {
        padding: 20px;
      }

      .movie-card {
        border-radius: 24% 24% 24% 24% / 45% 44% 41% 40%;
      }

      h5 {
        font-family: "Source Sans";
        font-weight: 700
      }


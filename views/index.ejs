  <body>

     <nav class="navabar bg-dark border-bottom border-body">
      <div class="container-fluid inner-nav-container">
        <div class="row justify-content-center">
          <div class="col-6 d-flex align-items-center justify-content-center">
            <a class="navbar-brand header" id="home-page-nav-header" href="#">Movie Tracker</a>
            <a class="navbar-brand header" id="home-page-watchlist-link" href="/movies">Watchlist</a>
         </div>
        </div>
      </div>
     </nav>

      <main role="main" class="text-center main">
        <h1 class="header">Add to Watchlist</h1>
        <p class="body-text">Type the title of the film you wnat to add to your watchlist</p>
        <div class="form-container d-flex justify-content-center" id="movie-form">
          <form action="/" method="POST">
            <div class="form-row align-items-center">
              <div class="col-auto">
                <label class="sr-only" for="title">Name</label>
                <input type="text" class="form-control mb-2" id="findMovieInput" name="title" placeholder="Enter Film Title">
              </div>
              <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </main>

    



  <body>

     <nav class="navbar navbar-expand-lg bg-dark">
      <div class="container-fluid d-flex align-items-center justify-content-center">
        <a class="navbar-brand" id="home-page-nav-header" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" id="home-page-watchlist-link" aria-current="page" href="/movies">Watchlist</a>
            </li>
          </ul>
        </div>
      </div>
     </nav>

      <main role="main" class="text-center main">
        <h1 class="header">Add to Watchlist</h1>
        <p class="body-text">Type the title of the film you want to add to your watchlist</p>
        <div class="form-container d-flex justify-content-center" id="movie-form">
          <form action="/" method="POST" class="row g-3">
            <div class="form-row">
              <div class="col-auto">
                <label class="sr-only visually-hidden" for="title">Film Title</label>
                <input type="text" class="form-control mb-2" id="findMovieInput" name="title" placeholder="Enter Film Title">
              </div>
              <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </main>

    


